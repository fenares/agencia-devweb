<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../css/global.css" rel="stylesheet">
    <link href = "../css/adminProdutos.css" rel = "stylesheet">

    <title>Admin Agência DevHouse</title>
</head>
<body>
    <%- include("../components/header") %>
    
    <main>
            <div class = "buttonCriar">
            <a class = "cadastrarButton" href="/admin/cadastro-produto">Cadastrar Novo Produto</a>
            </div>
        <div class="tabela">
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% produtos.forEach(produto => { %>
                <tr>
                  <td><%= produto.id %></td>
                  <td><%= produto.nome %></td>
                  <td>
                    <form method="POST" action="/deletar-produto/<%= produto.id %>?_method=DELETE">
                      <button type="submit">Excluir</button>
                    </form>
                  </td>
                </tr>
                <% }); %>
              </tbody>
        </table>
        </div>
    </main>
</body>
</html>